

<% @reports.each do |repo| %>
      <div class="row">
        <div class="col s12 m6">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">

              <span class="card-title"><%= "タイトル：#{repo.title}" %></span>

                <p>本　文　：<%= simple_format(repo.detail) %></p>
            </div>

            <% if user_signed_in? && current_user.id == repo.user_id %>
                <div class="card-action">
                <a href="/users/<%= current_user.id %>"><%= "nickname：#{repo.user.nickname}" %></a>
                </div>
            <% else %>
                 <div class="card-action">
                <%= "nickname：#{repo.user.nickname}" %>
                </div>
           <% end %>



          </div>
        </div>
      </div>


</div>
<% end %>


<%= paginate(@reports) %>


