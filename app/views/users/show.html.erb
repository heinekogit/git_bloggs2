<h4>＜<%= @nickname %>　のユーザページ＞</h4>
<hr>

<% @reports.each do |repo| %>

      <div class="row">
        <div class="col s12 m6">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">

                <span class="card-title"><%= "タイトル：#{repo.title}" %></span>

                    <p><%= "タイトル：#{repo.title}" %></p>

                    <p>本　文　：<%= simple_format(repo.detail) %></p>
                </div>

                <div class="card-action">
                    <p><%= "nickname：#{repo.user.nickname}" %></p>
                    <p><%= link_to "修正する", "/reports/#{repo.id}/edit" %>　
                        <%= link_to "削除する", "/reports/#{repo.id}", method: :delete %>
                    </p>
                </div>

          </div>
        </div>
      </div>
<% end %>

<%= paginate(@reports) %>


